<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Good Fish - MAP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>
    <style>
      #map {
        height: 400px;  /* The height is 400 pixels */
      }
      #kde {
        max-width:400px;
      }
    </style>
    <link rel="stylesheet" href="http://unpkg.com/leaflet@1.4.0/dist/leaflet.css" />
    <script src="http://unpkg.com/leaflet@1.4.0/dist/leaflet.js"></script>
    <script src="/L.KML.js"></script>
    <script src="https://cdn.rawgit.com/hayeswise/Leaflet.PointInPolygon/v1.0.0/wise-leaflet-pip.js"></script>
    
  </head>
  <body>
  <section class="section">
    <div class="container">
      <h1 class="title">
        Good Fish
      </h1>
      <div class="columns">
        <div class="column">
          <p class="subtitle">
            Where my fish taken?
          </p>
        </div>
        <div class="column">
          <span id='answer'></span>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p class="subtitle">
            Fishing gear
          </p>
        </div>
        <div class="column">
          <%= fishingGearTypeCode %> <%- icon2 %>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p class="subtitle">
            Species
          </p>
        </div>
        <div class="column">
          <%= epcClass %> <%- icon3 %>
        </div>
      </div>
      <div class="columns">
        <p>&nbsp;</p>
      </div>
      <div class="columns">
        <div id="map" class="container"></div>
      </div>
      <div class="columns">
        <p>&nbsp;</p>
      </div>
      <div class="columns">
        <div class="container">
          <pre class="prettyprint lang-html">
            <%= json %>
          </pre>
        </div>
      </div>
    </div>
  </section>
  <script>
    var map;
    var lat = <%- lat %>;
    var lng = <%- lng %>;

    initMap();

    function initMap() {
      var mymap = L.map('map').setView([lat,lng], 5);

      L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
        maxZoom: 18,
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
          '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
          'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
        id: 'mapbox.streets'
      }).addTo(mymap);

      // L.marker([lat,lng]).addTo(mymap)
      //   .bindPopup("<b>Fish catched here</b>");

      // var popup = L.popup();

      function onMapClick(e) {
        popup
          .setLatLng(e.latlng)
          .setContent("You clicked the map at " + e.latlng.toString())
          .openOn(mymap);
      }

      mymap.on('click', onMapClick);

      var check = L.marker([lat,lng]);

      const fns = [
        ['/WPP572.kml','WPP572'],
        ['/WPP573.kml','WPP573'],
        ['/WPP711.kml','WPP711'],
        ['/WPP712.kml','WPP712'],
        ['/WPP713.kml','WPP713'],
        ['/WPP714.kml','WPP714'],
        ['/WPP715.kml','WPP715'],
        ['/WPP716.kml','WPP716'],
        ['/WPP717.kml','WPP717'],
        ['/WPP718.kml','WPP718']
      ];

      var p = Promise.resolve();
      for(let i=0;i<fns.length;i++) {
        p = p.then(()=>{
          const fn = fns[i][0];
          const title = fns[i][1];
          return checkWPP(fn,title);
        });
      }
      let answer = 'UNKNOWN';

      p.then(()=>{
        console.log('done!');

        if(answer === 'UNKNOWN' || answer === 'WPP716') {
          document.getElementById('answer').innerHTML = answer+'<span class="icon has-text-warning"><i class="fas fa-exclamation-triangle"></i></span>';
        } else {
          document.getElementById('answer').innerHTML = answer+'<span class="icon has-text-success"><i class="fas fa-check-square"></i></span>';
        }
        
      })

      function checkWPP(fn,title) {
        return fetch(fn)
        .then(res => res.text())
        .then(kmltext => {
            const parser = new DOMParser();
            const kml = parser.parseFromString(kmltext, 'text/xml');
            const track = new L.KML(kml);
            console.log(track.latLngs);

            const ll = track.latLngs;
            const polygonData = [];
            for(let i=0;i<ll.length;i++) {
              const x = ll[i].lat;
              const y = ll[i].lng;
              polygonData.push([x,y]);
            }

            console.log(polygonData);
            const polygon = L.polygon(polygonData); // .addTo(mymap);
            const insideThis = polygon.contains(check.getLatLng());

            if(insideThis) {
              mymap.addLayer(track);
              answer = title;
            }
          });
      }


    }
  </script>
  </body>
</html>